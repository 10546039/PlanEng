<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.Group
            android:id="@+id/group"
            android:layout_width="24dp"
            android:layout_height="15dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/chapter_bg"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        app:srcCompat="@drawable/bookedit_chapbg" />

    <EditText
        android:id="@+id/chapDetail"
        android:layout_width="174dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:background="@null"
        android:ems="10"
        android:hint=" - 輸入詳細章節內容"
        android:textColor="?attr/colorControlNormal"
        app:layout_constraintBottom_toBottomOf="@+id/chapter"
        app:layout_constraintStart_toEndOf="@+id/chapter"
        app:layout_constraintTop_toTopOf="@+id/chapter" />

    <EditText
        android:id="@+id/ch_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@null"
        android:hint="0"
        android:inputType="number"
        android:maxLength="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/chapter_bg"
        app:layout_constraintEnd_toEndOf="@+id/chapter_bg"
        app:layout_constraintTop_toTopOf="@+id/chapter_bg" />

    <TextView
        android:id="@+id/chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:hint="10"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/chapter_bg"
        app:layout_constraintStart_toEndOf="@+id/ch"
        app:layout_constraintTop_toTopOf="@+id/chapter_bg"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/ch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Ch."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/chapter_bg"
        app:layout_constraintStart_toStartOf="@+id/chapter_bg"
        app:layout_constraintTop_toTopOf="@+id/chapter_bg" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="天"
        app:layout_constraintBottom_toBottomOf="@+id/chapter_bg"
        app:layout_constraintEnd_toEndOf="@+id/chapter_bg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ch_day"
        app:layout_constraintTop_toTopOf="@+id/chapter_bg"
        app:layout_constraintVertical_bias="0.56" />


</android.support.constraint.ConstraintLayout>
